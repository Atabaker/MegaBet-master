<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_wette_abgeben"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.fh_bielefeld.megabet.WetteAbgebenActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <TextView
                android:text="asediqi@fh-bielefeld.de"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TextViewUsername"
                android:gravity="left"
                android:layout_weight="1" />

            <TextView
                android:text="100 Taler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TextViewTaler"
                android:textColor="@android:color/holo_orange_light"
                android:layout_row="0"
                android:gravity="right"
                android:layout_column="9" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="1">

            <TextView
                android:text="Wette abgeben"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewWetteAbgeben"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:gravity="center"
                android:textStyle="normal|bold"
                android:layout_weight="0.13" />

            <TextView
                android:text="Spieldatum: 30.12.16 18:00 Uhr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewSpieldatum"
                android:layout_marginTop="20dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_marginBottom="20dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.29">

                <TextView
                    android:text="Heim"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/textViewHeimbez"
                    android:gravity="bottom|center"
                    android:layout_weight="0.98" />

                <TextView
                    android:text="Gast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewGastbez"
                    android:layout_weight="0.98"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:text="RB Leipzig"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/textViewHeimmannschaft"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="0.14"
                    android:textAppearance="@android:style/TextAppearance.Material.Small"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:text="DSC Bielefeld"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/textViewGastmannschaft"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="0.09"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="0.19">

                <RadioButton
                    android:text="Sieg Heim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButtonHeim"
                    android:layout_weight="1"
                    android:checked="true" />

                <RadioButton
                    android:text="Sieg Gast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButtonGast"
                    android:layout_weight="8.70" />

                <RadioButton
                    android:text="Unentschieden"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/radioButtonUnentschieden" />

            </RadioGroup>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:weightSum="1"
                android:layout_weight="0.18">

                <TextView
                    android:text="Wetteinsatz:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewWetteinsatz"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:layout_weight="0.06" />

                <EditText
                    android:layout_width="42dp"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/editTextWetteinsatz"
                    android:background="@android:color/background_light"
                    android:gravity="left"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorPrimaryDark" />

                <TextView
                    android:text="Taler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewTalereinsatz"
                    android:layout_weight="0.15"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/holo_orange_light" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="0.09">

                <Button
                    android:text="Abbrechen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonAbbrechen"
                    android:layout_weight="1"
                    android:onClick="onClickWetteAbgeben" />

                <Button
                    android:text="OK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonOk"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
